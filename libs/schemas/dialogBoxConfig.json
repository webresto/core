{
  "type": "object",
  "properties": {
    "askId": { "type": "string" },
    "allowClosing": { "type": "boolean" },
    "type": {
      "type": "string",
      "enum": ["routine", "critical"]
    },
    "message": { "type": "string" },
    "title": { "type": "string" },
    "optionsType": {
      "type": "string",
      "enum": ["button", "product"]
    },
    "icon": { "type": "string" },
    "timeout": { "type": "number" },
    "defaultOptionId": { "type": "string" },
    "options": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "button": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["primary", "secondary", "link", "abort"]
                  }
                },
                "required": ["type"]
              }
            },
            "required": ["button"]
          },
          {
            "properties": {
              "product": {
                "type": "object",
                "additionalProperties": true
              }
            },
            "required": ["product"]
          }
        ]
      }
    }
  },
  "required": ["message", "title", "optionsType", "options"]
}
