{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "${workspaceFolder}/test/bootstrap.ts",
        "'${workspaceFolder}/test/{,!(fixture)/**}/*.test.ts'",
        "--exit",
        "--grep=displayDish"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}